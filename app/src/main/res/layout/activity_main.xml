<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/tvFirstNameDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#162FBB"/>
        <TextView
            android:id="@+id/tvLastNameDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#EB2011"/>

    </LinearLayout>

    <EditText
        android:id="@+id/etFirstNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"/>

    <EditText
        android:id="@+id/etLastNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"/>

    <Button
        android:id="@+id/btnSendName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to Display Name"
        android:onClick="onButtonClickHandler"/>
    <Button
        android:id="@+id/btnClearName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to Clear Name"
        android:onClick="onButtonClickHandler"/>


</LinearLayout>